<we:AdvancedWindow x:Class="WPF_Extension.ThemeEditor.Views.MainWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:prism="http://prismlibrary.com/"
                   xmlns:we="WPF_Extension"
                   prism:ViewModelLocator.AutoWireViewModel="True"
                   Title="{Binding Title}" Height="350" Width="525"
                   TitleBarBackground="{DynamicResource BackgroundBrush}">

    <we:AdvancedWindow.CommandButtons>
        <we:DefaultCommandButtons FontFamily="Segoe MDL2 Assets"/>
    </we:AdvancedWindow.CommandButtons>
    
    
    <Grid>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</we:AdvancedWindow>
